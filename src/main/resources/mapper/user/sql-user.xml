<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cafe.pjt.repository.UserMapper">
    <select id="findAll" resultType="com.cafe.pjt.repository.model.User">
        SELECT * FROM user
    </select>
    <insert id="save" parameterType="com.cafe.pjt.repository.model.User">
        INSERT INTO user (username, password) VALUES ( #{username}, #{password} );
    </insert>
    <select id="findByUsername" parameterType="java.lang.String" resultType="com.cafe.pjt.repository.model.User">
        SELECT * FROM user WHERE username = #{username}
    </select>

</mapper>
